- name: ensure wget and ruby are installed
    yum:
    name: 
      - nodejs
      - npm
      - build-essential
    state: present
    update_cache: true
    become: true

  - name: Install pm2
    npm:
      name=pm2
      state: present


  - name: Create directory
     file:
       path: ~/web
      state: directory

  - name: Copy files
     copy:
       src: ~/web
      dest: ~/web/index.js

  - name: Start Web Server
     command: 'pm2 start ~/web/index.js -f'


  become_user: root
    roles:
   - setup